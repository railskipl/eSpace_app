$('.comments').append('<%= escape_javascript(render(:partial => 'comments/book_comment', :locals => {:comments => @comments }))%>');
$('a.load-more-posts').attr('href', '<%= books_comments_path(:post_id => params[:post_id], :page => @comments.next_page) %>');
 
<% unless @comments.next_page %>
  $('a.load-more-posts').remove();
<% end %>
