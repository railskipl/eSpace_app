$('#ref_comment').append('<%= escape_javascript(render(:partial => 'comments/book_comment', :locals => {:comments => @comments }))%>');
$('a.more').attr('href', '<%= books_comments_path(:post_id => params[:post_id], :page => @comments.next_page) %>');

<% unless @comments.next_page %>
  $('a.more').remove();
<% end %>
