<%= render 'common_links' %>
<%= form_tag search_user_disputes_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], :placeholder=>"Enter college email ID" %>
    <%= submit_tag "Search", :name => nil, :class=>"btn btn-primary contact-form" %>
  </p>
<% end %>
<% if @search_user %>
<table class="table table-striped">
<tr>
	<th>User ID</th>
	<th>College Email ID</th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Actions</th>
</tr>
<tr>
	<td><%= @search_user.id %></td>
	<td><%= @search_user.email %></td>
	<td><%= @search_user.name %></td>
	<td><%= @search_user.last_name %></td>
	<td><%= charge_user(@search_user) %> | <%= send_user(@search_user) %></td>
</tr>
<% else %>
	<table class="table table-striped">
	<tr>
	<th>Sr No.</th>
	<th>User ID</th>
	<th>College Email ID</th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Amount Send</th>
	<th>Amount Charge</th>
	<th>Stripe Commission</th>
	<th>Net We Send</th>
	<th>Net We Receive</th>
	</tr>


	<% @users.each_with_index do |user,index|%>
	<tr>
		<td><%= index + 1 %></td>
		<td><%= user.id %></td>
		<td><%= user.email %></td>
		<td><%= user.name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.amt if user.transaction_status == "send" %></td>
		<td><%= user.amt if user.transaction_status == "charge" %></td>
		<td><%= user.transaction_status == "charge" ? (user.amt*0.029+0.30).round(4) : 0.25 %></td>
		<td><%= user.amt + 0.25 if user.transaction_status == "send" %></td>
		<td><%= user.amt - (user.amt*0.029+0.30).round(4) if user.transaction_status == "charge"  %></td>
	</tr>

	<% end %>
	</table>
	<%= will_paginate @users %>

<% end %>