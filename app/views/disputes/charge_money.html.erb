<%= javascript_include_tag "jquery-1.7.0.min","jquery.validate.min","admin_validation" %>


<%= form_tag charged_money_dispute_path(params[:id]), :method => 'put', :id=>"dispute" do %>
  <p>
  	<%= hidden_field_tag :user_id, params[:id] %>
    <%= text_field_tag :amount %>
  </p>
  <p>
    <%= submit_tag "send", :name => nil, :class=>"btn btn-primary contact-form" %>
  </p>
<% end %>