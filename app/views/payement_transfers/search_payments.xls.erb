


<table class="table table-striped">
<tr>
    <th>Sr No.</th>
    <th>Booking ID</th>
    <th>Booking Date</th>
    <th>Booking Area/Sq.Ft</th>
    <th>Payment Received by Poster</th>
    <th>Payment Done by Finder</th>
    <th>Commission</th>
    <th>Poster Name</th>
    <th>Finder Name</th>
    <th>Address</th>
    <th>Transfer Status</th>
    <th>Money Transfer</th>
</tr>
<% @payment_transfers.try(:each_with_index) do |booking, index|%>
<tr>

  <td><%= index + 1 %></td>
  <td><%= booking.id %></td>
  <td><%= booking.created_at.to_date rescue nil%></td>
  <td><%= booking.area rescue nil %></td>
  <td>$<%= booking.cut_off_price.to_i rescue nil %></td>
  <td>$<%= booking.price.to_i rescue nil %></td>
  <td>$<%= booking.commission.to_i %></td>
  <td><%= booking.poster.name rescue nil%></td>
  <td><%= booking.user.name rescue nil %></td>
  <td><%= booking.post.address rescue nil%></td>
  <td><%= booking.status.camelize rescue nil %>
    
  <td>
    <% if booking.is_cancel == true %>
        <span>Cancelled</span>
    <% else %>
    <% unless booking.stripe_transfer_id.present? %>  
    <%= link_to "Money Transfer",transfer_money_payement_transfers_path(:booking_id =>booking.id,:poster_id =>booking.poster_id,:finder_id=>booking.user_id) rescue nil%>
    <% else %>
       -----
    <% end %>
    <% end %>
  </td>  
  
</tr>
<%end%> 
</table>
