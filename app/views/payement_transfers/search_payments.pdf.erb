
<table class="table table-striped">
<tr>
  <th>Sr No.</th>
  <th>Booking ID</th>
  <th>Booking Date</th>
  <th>Booking Area/Sq.Ft</th>
  <th>Payment Received by Poster</th>
  <th>Payment Done by Finder</th>
  <th>Commission</th>
  <th>Poster Name</th>
  <th>Finder Name</th>
  <th>Address</th>
  <th>Transfer Status</th>
  <th>Money Transfer</th>
</tr>
<% @payment_transfers.try(:each_with_index) do |booking, index|%>
<tr>

<td><%= index + 1 %></td>
<td><%= booking.created_at.to_date %></td>
<td><%= booking.area %></td>
<td>$<%= booking.cut_off_price.to_i rescue nil %></td>
<td>$<%= booking.price.to_i rescue nil %></td>
<td>$<%= booking.commission.to_i %></td>
<td><%= booking.poster.name %></td>
<td><%= booking.post.address %></td>

 <td><%= booking.dropoff_date.strftime("%d-%m-%Y")%> </td>

 <td><%= booking.pickup_date.strftime("%d-%m-%Y") %></td>

  
<td><%= link_to "View Details",{:controller => 'bookings', :action => 'show', :id => booking.id} %></td>
<td><%= booking.status.camelize rescue nil %>
  

</tr>
<%end%> 
</table>
