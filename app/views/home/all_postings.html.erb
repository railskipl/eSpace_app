   
<table class="table table-striped">

  <thead>
    <tr>
      <th>Sr No.</th>
      <th>Post ID</th>
       <th>Price</th>
      <th>Post Date</th>
      <th>Area (Sq ft)</th>
      <th>Price (Sq ft)</th>
      <th>Address</th>
      <th>Status</th>
      <th>Action</th>
       
    </tr>
  </thead>

  <tbody id="all_posts" >

   
    <% @posts.each_with_index do |post, index| %>
    
        <tr>
        <td><%= index + 1 %></td>
        <td><%= post.id %></td>
        <td><%= post.price_sq_ft %></td>
        <td><%= post.created_at.strftime("%d-%m-%Y") %></td> 
        <td><%= post.area %></td>
        <td>$<%= post.price_sq_ft %></td>
        <td><%= post.address %></td>
        <td><% if post.status == true %> Active <% else %> Deactive <% end %></td>
         <% if post.featured == true %>
        <td> <%= link_to 'Deactive', toggled_feature_post_path(post.id)%></td>
         <% else %>
         <td><%= link_to 'Activate', toggled_feature_post_path(post.id)%></td>
         <% end %>
 
      </tr>
    <% end %>

    
  </tbody>
</table> 



