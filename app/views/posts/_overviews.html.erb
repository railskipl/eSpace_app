


    <% @posts.each_with_index do |post, index| %>
    <% if params[:page].nil? || params[:page] == "0" || params[:page] == "1" %>
      <% x = 0 %>
    <% else %>
      <% page = params[:page].to_i - 1 %>
      <% x = page * 4 %>
    <% end %>

    <div class="new_box">
      <a onmouseout="hover.out(<%= index+x %>)" onmouseover="hover.over(<%= index+x %>)" href="<%= post_path(post) %>" id="m<%= post.id %>">
              <div class="img1">
              
              <div class="1" style="float:left; margin-right:10px;"> 
                  <% if post.photo.url(:thumb) == "/photos/thumb/missing.png" %>
                      <%= image_tag "default_post_small.png", :style=>"margin-top:4px;" %>
                  <% else %>
                      <%= image_tag(post.photo.url(:thumb), :style=>"margin-top:4px;") %>
                 <% end %>
               
              </div>
              <div class="circle">
               <p>$<%= post.price_sq_ft.to_i %></p></div>
                </div>
        
        
            

                 <div class="name-title"> <%= post.user.name.capitalize rescue nil%> <%= post.user.last_name[0,1] rescue nil %> 

                  <span style="font-size:10px; color:#999;"> <% if current_user.provider.present? &&  post.user.provider.present? && post.user_id != current_user.id %>(<%= mutual_friend_list(post.user.id) rescue nil%> mutual friends)<% end %>
                  </span>
                  <p class="month"> <%= post.drop_off_avaibility_start_date.strftime("%b %e") %> -  <%= post.drop_off_avaibility_end_date.strftime("%b %e") %> <div class="right-mark">
                   <% if post.drop_off == true %> 
                    <p class="tooltip"><img src="/assets/right.png" style="float:right; margin:-6px 24px 0 0;"><span class="classic">Drop off ride availabe ($<%= post.price_include_drop_off.to_i %>) </span></p> 
                    <% else %>  
                    <p class="tooltip" style="color:#999;"><img src="/assets/close1.png" style="float:right; margin:-6px 24px 0 0;"><span class="classic">Drop off ride unavailable </span> </p>
                  <% end %>

                  </p>


                    <p class="month"> <%= post.pick_up_avaibilty_start_date.strftime("%b %e") %> - <%= post.pick_up_avaibility_end_date.strftime("%b %e") %> <div class="right-mark">
                      <% if post.pick_up == true %> 
                      <p class="tooltip"><img src="/assets/right.png" style="float:right; margin:11px -20px 0 0;"><span class="classic">Pick-up ride availabe ($<%= post.price_include_pick_up.to_i %>) </span></p> 
                      <% else %>  
                      <p class="tooltip" style="color:#999;"><img src="/assets/close1.png" style="float:right; margin:11px -20px 0 0;"><span class="classic">Pick-up ride unavailable </span> </p>
                      <% end %>
                    </p>


                
                  
                 
                  
                  <div class="name-title" style="margin:-30px 0 0 180px;"> <%= params[:search] ?  params[:search][:miles].present? && params[:search][:address].present? ? "#{post.distance.round(2)} miles" : '' : '' %></div>
                  <div class="address">  <%= post.address %></div>
                 </div>
              </div>

              <div class="btn_b1" style="margin-left:324px; margin-top:-15px"> 
             <div id="cf">
                  <img class="bottom" src="/assets/b2.png" />
                  <img class="top" src="/assets/b1.png" />
                    </div>
                     </div>
  
             
      </div></a>
      </div>

    <% end %>

