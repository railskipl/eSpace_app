<h4>Search by</h4>
<%= form_for :search, :url=> {:controller=>'posts', :action=>'index'}, :html => {:method => 'get'} do |f| %>
  <p>
    <%= f.select :status, options_for_select(%w[Active Inactive]) %>
    From Date :
     <%= text_field_tag :start_date, params[:start_date], :readonly => true %>

     To Date :
     <%= text_field_tag :end_date, params[:end_date], :readonly => true %>&nbsp;

    <%= f.submit "Search",:class => "btn btn-primary contact-form" %>
  </p>
<% end %>


