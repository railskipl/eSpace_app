     
    <% @posts.each_with_index do |post, index| %>
      <div class="box1">
        <%= index + 1 %>)
         <%= post.user.email rescue nil%>
        <%= post.id %>
        <%= post.price_sq_ft %>
        <%= post.created_at.strftime("%d-%m-%Y") %>
        <%= post.area %>
        $<%= post.price_sq_ft %>
        <%= post.address %>
        <% if post.status == true %> Active <% else %> Deactive <% end %>
        <% if user_signed_in? && signed_in? && current_user.admin?  %>

      <% if post.featured == true %>
     <%= link_to 'Deactive', toggled_feature_post_path(post.id)%>
      <% else %>
      <%= link_to 'Activate', toggled_feature_post_path(post.id)%>
      <% end %>
   
        <%else%>
        <%= link_to 'View Details', post_path(post) %>
        
        <div id="message_<%= post.id %>"><%= link_to "Send Message ", compose_message_messages_path(:user_id => post.user_id,:post_id => post.id ), :remote=>true %></div>
        <%end%> 
     </div>
    <% end %>
