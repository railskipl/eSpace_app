</table>

      <h3>Post your comment</h3>
   <%= form_for [@post, Comment.new] do |f| %>
<p>Name:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :name %><br>
   Comment:<%= f.text_area :comments ,:cols=>"30", :rows=>"4" %>

 <p ><%= f.submit "Add comment", :class => 'btn btn-info' %></p>
  <% end %>


  <b><%= @comments.count %></b> Comments<br>
<% @comments.each do |comment| %>
<strong><%= comment.name rescue nil %></strong> <%= comment.created_at.strftime("%b %m,%Y") %><br>

<%= comment.comments %><br><br>


<%end%>



