<style>
input[type="checkbox"]:not(old) + label, input[type="radio"]:not(old) + label { margin-left: 0; background-image: none;}


</style>

<%= stylesheet_link_tag "booking_popup.css" %>

<div class="content"> 

<div class="boxpop-up">
  <div class="heading">Rate</div>
    <div class="paragraph-new">
      <%= form_for [@post, Comment.new] ,:html=>{ id: "new_comment"} do |f| %>
      	<%= f.hidden_field :user_id, :value=> current_user.id %>
          <fieldset class="rating">
          <%= f.radio_button(:rating, "5") %><%= f.label(:rating.to_s + "_5") %>
          <%= f.radio_button(:rating, "4") %><%= f.label(:rating.to_s + "_4") %>
          <%= f.radio_button(:rating, "3") %><%= f.label(:rating.to_s + "_3") %>
          <%= f.radio_button(:rating, "2") %><%= f.label(:rating.to_s + "_2") %>
          <%= f.radio_button(:rating, "1") %><%= f.label(:rating.to_s + "_1") %>
         </fieldset><br><br><br>
        <%= f.text_area :comments ,:placeholder => "Review",:cols=>"30", :style=>"width: 337px; height: 126px;  margin-top: -60px; border: 2px solid #eee; font-family: brandon4;"%>
        <%= f.submit "Add Review", :class=>"booking-btn" %>
      <% end %>
    </div>
</div>
</div>
