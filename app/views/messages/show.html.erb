  <div class="container_20">
    <div style="width:40%; float:left"><h4>Message</h4></div>
  </div>
    <div class="grid_16" style="margin-bottom:10px;">
    <p id="notice"><%= notice %></p>
  <br>
<p>
  <b>Subject</b>: <%= @message.subject %><br/><br/>
    <% msg1 = [] %>
      <% @msgs.each do |i| %>
      <b> <%= i.sender.name %> </b>:
          <%= i.body %>
          <%= i.id %><br/>
          <% msg1 << i.id%>
      <% end %>
</p>
    </div><% if current_user == @message.sender && current_user == @message.recipient %>
<% if !msg1.blank? %>
<a class="submit_btn" style="margin:0" href="<%= reply_message_path(msg1.max)%>">Reply *</a>
<% else %>
<a class="submit_btn" style="margin:0" href="<%= reply_message_path(@message)%>">Reply *</a>
<% end %>
<% elsif  current_user == @message.recipient  %>
<% if !msg1.blank? %>
<a class="submit_btn" style="margin:0" href="<%= reply_message_path(msg1.max)%>">Reply *</a>
<% else %>
<a class="submit_btn" style="margin:0" href="<%= reply_message_path(@message)%>">Reply *</a>
<% end %>
<% else %>
<% end %>
 </div>