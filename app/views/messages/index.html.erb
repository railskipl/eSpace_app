	<script>

	jQuery(document).ready(function() {
		jQuery("#refresh_msg").load('<%= refresh_message_messages_path(:recv_id=>"#{params[:recv_id]}") %>');

		jQuery('#submit_msg').click(function() {
			var text_title = this.form.message_body.value;
			if(text_title != ''){
				$("#reply_message").submit();
				$("#message_body").val('');
			}
		});

    	jQuery("#message_body").keyup(function (e) {

        var code = (e.keyCode ? e.keyCode : e.which);
        
        var text_title = this.form.message_body.value;
	      
		   if(text_title != ''){

		      jQuery('input[type="submit"]').addClass('msg_active');

		      if (code == 13) {
	        	$("#reply_message").submit();
	        	$("#message_body").val('');	
	            return true;
	         }
		   } 
		   if(text_title == '')
			{
				jQuery('input[type="submit"]').removeClass('msg_active');
			}

		});

	});

